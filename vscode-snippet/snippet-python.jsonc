{
	// 在utils-python-global/snippet-python.jsonc中进行改动, 然后copy到python.json
	"sys.path add path": {
		"prefix": ["sys.path add path"], // 在snippet列表中显示的名称
		"body": [
			"", // 在snippet列表中显示的名称
			"import sys, os, pathlib",
			"DirPathCurrent = os.path.dirname(os.path.realpath(__file__)) + \"/\"",
			"DirPathParent = pathlib.Path(DirPathCurrent).parent.absolute().__str__() + \"/\"",
			"DirPathGrandParent = pathlib.Path(DirPathParent).parent.absolute().__str__() + \"/\"",
			"DirPathGreatGrandParent = pathlib.Path(DirPathGrandParent).parent.absolute().__str__() + \"/\"",
			"sys.path += [",
			"\tDirPathCurrent, DirPathParent, DirPathGrandParent, DirPathGreatGrandParent",
			"]",
			"$2" //通过Tab让光标跳跃到下1个placeholder
		],
		"description": "sys.path add path"
	},
	"sys.path add path(jupyter)": {
		"prefix": ["sys.path add path(jupyter)"], // 在snippet列表中显示的名称
		"body": [
			// "from __future__ import annotations",
			"import sys, os, pathlib",
			"DirPathCurrent = os.path.abspath('') + \"/\"",
			"DirPathParent = pathlib.Path(DirPathCurrent).parent.absolute().__str__() + \"/\"",
			"DirPathGrandParent = pathlib.Path(DirPathParent).parent.absolute().__str__() + \"/\"",
			"DirPathGreatGrandParent = pathlib.Path(DirPathGrandParent).parent.absolute().__str__() + \"/\"",
			"sys.path += [",
			"\tDirPathCurrent, DirPathParent, DirPathGrandParent, DirPathGreatGrandParent",
			"]",
			"$2"
		],
		"description": "sys.path add path(jupyter)"
	},
